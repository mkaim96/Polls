@using Microsoft.AspNetCore.Identity;
@using Polls.Infrastructure.Ef

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@if (signInManager.IsSignedIn(User))
{
    <li><a asp-action="Logout" asp-controller="Account">Wyloguj</a></li>
}
else
{
    <li><a asp-action="Login" asp-controller="Account">Zaloguj się</a></li>
    <li><a asp-action="Register" asp-controller="Account">Zarejestruj się</a></li>
}

