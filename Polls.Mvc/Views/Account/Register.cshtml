@model Polls.Mvc.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="form">
    <form asp-controller="Account" asp-action="Register" method="post">

        @Html.AntiForgeryToken()

        <h4 class="header">Utwórz nowe konto</h4>

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Email" class="label"></label>
            <input type="text" asp-for="Email" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="label"></label>
            <input type="text" asp-for="UserName" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="Password" class="label"></label>
            <input type="password" asp-for="Password" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="glyphicon-paste"></label>
            <input type="password" asp-for="ConfirmPassword" class="input" />
        </div>

        <div class="form-group">
            <input type="submit" value="Zarejestruj" class="button" />
        </div>
    </form>
</div>