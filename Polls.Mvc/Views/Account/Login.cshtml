@model Polls.Mvc.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Zaloguj się</h2>

<div class="form">

    <form asp-action="Login" asp-controller="Account" method="post">

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Email" class="label"></label>
            <input type="text" asp-for="Email" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="Password" class="label"></label>
            <input type="password" asp-for="Password" class="input" />
        </div>

        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" type="checkbox" />
        </div>

        <div class="form-group">
            <input type="submit" value="Zaloguj się" class="button" />
        </div>
    </form>

</div>  